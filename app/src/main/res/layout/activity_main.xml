<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:text="0"
        android:textSize="64sp"
        android:textColor="#FFFFFF"
        android:gravity="end|bottom"
        android:padding="24dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="AC"
        android:textSize="24sp"
        android:textColor="#000000"
        android:backgroundTint="#A5A5A5"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_plusminus"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plusminus"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:backgroundTint="#A5A5A5"
        android:text="+/-"
        android:textColor="#000000"
        android:textSize="24sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toEndOf="@+id/button_clear"
        app:layout_constraintEnd_toStartOf="@+id/button_percent"
        app:layout_constraintTop_toTopOf="@+id/button_clear"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_percent"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="%"
        android:textSize="24sp"
        android:textColor="#000000"
        android:backgroundTint="#A5A5A5"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_plusminus"
        app:layout_constraintStart_toEndOf="@+id/button_plusminus"
        app:layout_constraintEnd_toStartOf="@+id/button_divide"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_divide"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="รท"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9F0A"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_percent"
        app:layout_constraintStart_toEndOf="@+id/button_percent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="7"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@+id/button_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="8"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_7"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@+id/button_9"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="9"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_8"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiply"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="ร"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9F0A"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="4"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_5"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="5"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_4"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintEnd_toStartOf="@+id/button_6"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="6"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_5"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/button_subtract"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_subtract"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="-"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9F0A"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="1"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="2"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_1"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="3"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_2"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/button_add"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="+"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9F0A"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        android:layout_width="190dp"
        android:layout_height="85dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_float"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_float"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text=","
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toTopOf="@+id/button_0"
        app:layout_constraintStart_toEndOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@+id/button_equals"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_equals"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:text="="
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9F0A"
        app:cornerRadius="85dp"
        app:layout_constraintTop_toTopOf="@+id/button_float"
        app:layout_constraintStart_toEndOf="@+id/button_float"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>